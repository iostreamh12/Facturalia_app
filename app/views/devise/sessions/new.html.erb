<div class="row">
  <div class="col-sm-6" style="border-color: #F7BC64; -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);-webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3); box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);">

    <h2>Iniciar Sesión</h2>

    <%= form_for(resource, :as => resource_name, 
    :url => session_path(resource_name),
    role: "form") do |f| %>
  
      <div class="form-group">
        <%= f.label :email %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.text_field :email, :autofocus => true, class: "form-control" %>  
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :password %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      </div>
  
      

      <% if devise_mapping.rememberable? -%>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-6">
        		<%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordarme" %>
					</div>
				</div>
			</div>
      <% end -%>

      <div class="row">
        <div class="col-sm-6">
          <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
